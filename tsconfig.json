    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "Node",
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "declarationDir": "bin/dts",
    "declaration": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/index.ts",
    "src/typings.d.ts"
  ]
}