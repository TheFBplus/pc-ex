{
  "compilerOptions": {
    "lib": [
      "ES6",
      "DOM"
    ],
    "moduleResolution": "Node",
    "target": "ES5",
    "module": "ES6",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "declarationDir": "bin/dts",
    "declaration": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/index.ts",
    "src/typings.d.ts",
    "src/scripts/**/*"
  ]
}